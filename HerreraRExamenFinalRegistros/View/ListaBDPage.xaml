<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HerreraRExamenFinalRegistros.View.ListaBDPage"
             xmlns:vm="clr-namespace:HerreraRExamenFinalRegistros.ViewModels"
             Title="Lista de los Proyectos en la Base de Datos">

    <ContentPage.BindingContext>
        <vm:ListaBDViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Proyectos}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="{Binding NombreProyecto}" FontAttributes="Bold" />
                        <Label Text="{Binding Responsable}" />
                        <Label Text="Progreso: {Binding Progreso}%" />
                        <Label Text="Duración: {Binding DuracionDias} días" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>